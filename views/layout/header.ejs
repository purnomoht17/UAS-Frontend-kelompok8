<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Header dengan Logo dan Navigasi</title>
    <style>
        /* Gaya untuk alert mengambang */
        #subscribeAlert {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1050; /* Pastikan di atas elemen lain */
            transition: opacity 0.5s ease;
        }
    </style>
    <style>
        /* Styling untuk nama pengguna */
        .user-name {
            font-weight: bold;
            color: #007bff; /* Ganti dengan warna sesuai preferensi */
            font-size: 1.1rem;
            padding-left: 10px;
            border-left: 2px solid #54595e; /* Menambahkan garis di kiri */
        }
    </style>
    <script>
        function showAlert(event) {
            event.preventDefault(); // Prevent form submission
            var alertBox = document.getElementById('subscribeAlert');
            alertBox.classList.remove('d-none'); // Show alert
            alertBox.style.opacity = '1'; // Ensure alert is visible
            setTimeout(function() {
                alertBox.style.opacity = '0'; // Fade out alert after 3 seconds
                setTimeout(function() {
                    alertBox.classList.add('d-none'); // Hide alert
                }, 500); // Wait for fade out to complete before hiding
            }, 3000); // Show alert for 3 seconds
        }
    </script>
    <!-- Tambahkan JavaScript untuk menampilkan waktu -->
    <script>
        function updateTime() {
            const now = new Date();
            const hours = now.getHours().toString().padStart(2, '0');
            const minutes = now.getMinutes().toString().padStart(2, '0');
            const seconds = now.getSeconds().toString().padStart(2, '0');
            const timeString = `Current Time: ${hours}:${minutes}:${seconds}`;
            document.getElementById('current-time').textContent = timeString;
        }

        setInterval(updateTime, 1000);  // Update setiap detik
        updateTime();  // Menampilkan waktu saat ini pada muatan pertama
    </script>

</head>
