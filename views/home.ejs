<%- include ('layout/header') %>
<%- include ('layout/navbar') %>

<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="assets/images/web/mount1.jpg" class="d-block w-100" alt="Mount 1">
            <div class="carousel-caption d-none d-md-block">
                <h5>Haiku Stairs, Kaneohe, United States</h5>
                <p>Mountain hiking sunset follow @kalenemsley on ig.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="assets/images/web/mount2.jpg" class="d-block w-100" alt="Mount 2">
            <div class="carousel-caption d-none d-md-block">
                <h5>Pali Notches, United States</h5>
                <p>Scaling a mountain peak.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="assets/images/web/mount3.jpg" class="d-block w-100" alt="Mount 3">
            <div class="carousel-caption d-none d-md-block">
                <h5>Cypress Falls Park, West Vancouver, Canada</h5>
                <p>A pair of hiking boots and a backpack sit on a bed of rocks, ready for adventure.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="assets/images/web/mount4.jpg" class="d-block w-100" alt="Mount 4">
            <div class="carousel-caption d-none d-md-block">
                <h5>Cypress Falls Park, West Vancouver, Canada</h5>
                <p>Silhouettes of people enjoying a hike on a bright sunny day.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container py-5">
    <% if (user) { %>
        <h1 class="fw-bold text-center">Welcome to the Lifestyle Hub, <%= user.name %>!</h1>
    <% } else { %>
        <h1 class="fw-bold text-center">Welcome to the Lifestyle Hub, Guest!</h1>
    <% } %>
    <p class="text-center">Glad to have you here.</p>
    <p class="text-justify">Lifestyle is all about finding balance, embracing health, and living in the moment. Whether you're into fitness, mindfulness, or just looking to elevate your daily routines, you've come to the right place.</p>
</div>

<div>
    <div class="text-center">
        <p id="current-time" class="fw-bold"></p> 
    </div>
</div>

<div class="container py-5">
    <h2 class="fw-bold text-center mb-4">Our Amazing Tours</h2>
    <div class="row">
        <% tours.forEach(tour => { %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="assets/images/tours/<%= tour.image_cover %>" class="card-img-top" alt="<%= tour.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= tour.name %></h5>
                        <p class="card-text"><%= tour.summary %></p>
                        <p><strong>Price:</strong> $<%= tour.price %></p>
                        <a href="/tours/<%= tour.id %>" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<!-- Popup untuk login/sign up -->
<% if (!user) { %>
    <div id="loginPopup" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Please Login or Sign Up</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>You must log in or sign up to access this content.</p>
                    <a href="/login" class="btn btn-primary">Login</a>
                    <a href="/signup" class="btn btn-secondary">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
<% } %>

